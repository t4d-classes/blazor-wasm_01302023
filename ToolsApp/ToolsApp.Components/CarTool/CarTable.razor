<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @if (!Cars.Any())
    {
      <tr>
        <td colspan="6">No Cars</td>
      </tr>
    }
    @foreach (var car in Cars)
    {
      @if (car.Id == EditCarId)
      {
        <CarEditRow Car="@car"></CarEditRow>

      }
      else
      {
        <CarViewRow Car="@car" OnEditCar="@editCar" OnDeleteCar="@deleteCar"></CarViewRow>
      }
    }
  </tbody>
</table>

@code {
  [Parameter]
  public IEnumerable<ICar> Cars { get; set; } = new List<ICar>();

  [Parameter]
  public int EditCarId { get; set; } = -1;

  [Parameter]
  public EventCallback<int> OnEditCar { get; set; }

  [Parameter]
  public EventCallback<int> OnDeleteCar { get; set; }

  private async Task editCar(int carId)
  {
    await OnEditCar.InvokeAsync(carId);
  }

  private async Task deleteCar(int carId)
  {
    await OnDeleteCar.InvokeAsync(carId);
  }
}